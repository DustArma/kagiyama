<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <ViewSwitcher
         android:id="@+id/imgview_switcher"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_gravity="center">

        <com.duy.minoriko2.widgets.DanboImageView
            android:id="@+id/imgview_imView0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.duy.minoriko2.widgets.DanboImageView
            android:id="@+id/imgview_imView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

      </ViewSwitcher>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/imgview_imgProgressBar"
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:layout_gravity="top"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="gone"
        android:indeterminate="false"/>
    <ProgressBar
        android:id="@+id/imgview_downloadProgressBar"
        android:layout_width="match_parent"
        android:layout_height="3sp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"/>
</FrameLayout>
